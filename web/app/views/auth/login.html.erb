<div class="login-container" data-turbo="false">
  <div class="login-left">
    <div class="brand">
      <h1>VoipAppz</h1>
      <p>Professional Call Management Dashboard</p>
    </div>
    
    <div class="features">
      <ul>
        <li>ðŸ“Š Real-time call monitoring</li>
        <li>ðŸ“ˆ Detailed reporting</li>
        <li>ðŸŽ§ Call recording management</li>
        <li>ðŸ‘¥ Multi-user support</li>
      </ul>
    </div>
  </div>

  <div class="login-right">
    <div class="login-form">
      <h2>Sign In</h2>
      
      <% if flash[:alert] %>
        <div class="alert alert-error">
          <%= flash[:alert] %>
        </div>
      <% end %>
      
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <form action="<%= user_session_path %>" method="post" class="auth-form" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        
        <div class="form-group">
          <label for="user_email">Email Address</label>
          <input type="email" name="user[email]" id="user_email" required placeholder="Enter your email" />
        </div>

        <div class="form-group">
          <label for="user_password">Password</label>
          <input type="password" name="user[password]" id="user_password" required placeholder="Enter your password" />
        </div>

        <div class="form-group">
          <input type="checkbox" name="user[remember_me]" id="user_remember_me" value="1" />
          <label for="user_remember_me">Remember me</label>
        </div>

        <input type="submit" value="Sign In" class="btn btn-primary" />
      </form>


      <div class="auth-links">
        <%= link_to "Forgot your password?", new_user_password_path %>
        <span>|</span>
        <%= link_to "Create an account", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>